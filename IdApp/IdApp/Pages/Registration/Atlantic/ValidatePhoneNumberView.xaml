<?xml version="1.0" encoding="UTF-8"?>
<registration:RegistrationStepView
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
	xmlns:registration="clr-namespace:IdApp.Pages.Registration;assembly=IdApp"
	xmlns:model="clr-namespace:IdApp.Pages.Registration.Atlantic;assembly=IdApp"
	xmlns:controls="clr-namespace:IdApp.Controls.Extended"
	x:DataType="model:ValidatePhoneNumberViewModel"
	x:Class="IdApp.Pages.Registration.Atlantic.ValidatePhoneNumberView">

	<Grid Margin="0" Padding="{StaticResource DefaultMargin}" RowDefinitions="*,auto,*,auto">
		<!-- <Image Source="tag_bg2.jpg" Aspect="AspectFill" /> -->

		<StackLayout Grid.Row="0"/>

		<StackLayout Grid.Row="1" Spacing="{StaticResource LargeRawSpacing}" >
			<controls:ExEntryCode Length="6" Text="{Binding Path=PhoneNrVerificationCode}" />

			<Button Text="{xct:Translate Text=VerifyCode}"
					Command="{Binding Path=VerifyPhoneNrCodeCommand}"
					IsEnabled="{Binding Path=VerifyPhoneCodeButtonEnabled}" />
		</StackLayout>

		<StackLayout Grid.Row="2"/>

		<ActivityIndicator Grid.Row="3" IsVisible="{Binding Path=IsBusy}" IsRunning="{Binding Path=IsBusy}" Style="{StaticResource AccentIndicator}" />
	</Grid>
</registration:RegistrationStepView>
