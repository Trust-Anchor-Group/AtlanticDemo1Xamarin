<?xml version="1.0" encoding="utf-8" ?>
<ContentView
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="IdApp.Controls.Extended.ExEntryCode">

	<ContentView.GestureRecognizers>
		<TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
	</ContentView.GestureRecognizers>

	<Grid x:Name="ContainerGrid" ColumnSpacing="10" HorizontalOptions="CenterAndExpand"
		  RowDefinitions="auto" ColumnDefinitions="auto">
		<Entry x:Name="CodeEntry" Grid.Column="0"
			   TextColor="Transparent"  BackgroundColor="Transparent"
			   HorizontalOptions="Start" WidthRequest="10" HeightRequest="10"
			   IsPassword="True" Keyboard="Numeric"
			   Focused="HandleFocusChange"
			   Unfocused="HandleFocusChange"
			   TextChanged="HandleTextChanged"/>
	</Grid>
</ContentView>
